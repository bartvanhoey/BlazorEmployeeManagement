@page "/custom-data-sorting"

<PageTitle>Custom Data Sorting</PageTitle>

<SfGrid TValue="Employee" AllowPaging="true" AllowSorting="true">
    <SfDataManager Adaptor="Adaptors.CustomAdaptor" AdaptorInstance="@typeof(CustomDataSortingDataAdaptor)"> </SfDataManager>
    <GridPageSettings PageSize="5" PageSizes="@PagerDropDown" PageCount="3"></GridPageSettings>
    <GridSortSettings AllowUnsort="false">
        <GridSortColumns>
            <GridSortColumn Field="EmployeeId" ></GridSortColumn>
        </GridSortColumns>
    </GridSortSettings>
    <GridColumns>
        <GridColumn Field=@nameof(Employee.EmployeeId) HeaderText="ID"></GridColumn>
        <GridColumn Field=@nameof(Employee.FirstName) HeaderText="First Name"></GridColumn>
        <GridColumn Field=@nameof(Employee.LastName) HeaderText=" Last Name"></GridColumn>
        <GridColumn Field=@nameof(Employee.Email) HeaderText="Email"></GridColumn>
    </GridColumns>
</SfGrid>

@code{
    public string[] PagerDropDown { get; set; } = { "All", "5", "10", "20" };
}